<!-- 新闻列表 -->
<section id="content">
    <div class="sidebar-box white animate-onscroll">
        <div class="right-arrow"><i class="icons icon-right-dir"></i><h3 style="display:inline-block;">协会动态</h3></div>
        <div class="post-list">
            <% if(documentList.length > 0){ %>
            <% documentList.forEach(function(item){ %>
            <article class="post list">
                <div class="row">
                    <div class="col-xs-3 col-md-3">
                        <% if(item.isTop == 1){ %>
                        <span class="span-mark">荐</span>
                        <% } %>
                        <img src="<%= item.sImg %>" class="img-responsive" alt="<%= item.title %>"/>
                    </div>
                    <div class="col-xs-9 col-md-9">
                        <h4 class="post-title">
                            <a href="/details/<%= item._id %>.html"
                               target="_blank"><%- searchKeyWord(item.title, pageInfo.searchKey) %></a>
                        </h4>
                        <!--<ul class="post-meta">
                            <li><i class="fa fa-clock-o" aria-hidden="true"></i>&nbsp;<%=myDateFormat(item.date)%></li>
                            <li> <i class="fa fa-eye" aria-hidden="true"></i>&nbsp;阅读(<%=item.clickNum%>)</li>
                            <li> <i class="fa fa-comments-o" aria-hidden="true"></i>&nbsp;评论(<%=item.commentNum%>)</li>
                        </ul>-->
                        <div class="post-content"><%- searchKeyWord(item.discription, pageInfo.searchKey) %></div>
                    </div>
                </div>
            </article>
            <% }) %>
            <% }else{ %>
            <p class="text-center">暂无内容...</p>
            <% } %>
        </div>
    </div>
</section>
