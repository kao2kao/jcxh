<div class="row" ng-controller="subOrgList">
	<% include public/modal %>
    <div class="col-xs-12">
        <div class="panel">
            <div class="btn-group">
                <button class="btn btn-primary btn-sm" type="button"><span class="fa fa-plus-square" aria-hidden="true">&nbsp;</span>添加分会</button>
                <button data-toggle="dropdown" class="btn btn-primary btn-sm dropdown-toggle" type="button" aria-expanded="false">
                    <span class="caret"></span>
                    <span class="sr-only">请选择文档类型</span>
                </button>
                <ul role="menu" class="dropdown-menu">
                    <li><a href="/admin/manage/subOrg/add">添加分会</a></li>
                </ul>
            </div>
            <% include public/tableTool %>
            <div class="pull-right">
                <% include public/searchBox %>
            </div>
        </div>
        <div class="box">
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tr>
                        <th><input type="checkbox" class="mini" id="selectAll"/></th>
                        <th>分会名称</th>
                        <th>首字母代码</th>
                        <th>操作</th>
                    </tr>
                    <tr class="datalist" ng-repeat="subOrg in data">
                        <td><input type="checkbox" name="listItem" class="mini" value="{{subOrg._id}}" ng-click="getNewIds()"/></td>

                        <td ng-switch on="subOrg.type">
                            <span><a href="/subOrg/{{subOrg.code}}" target="_blank">{{subOrg.title}}</a></span>
                        </td>                       
                        <td>{{subOrg.code}}</td>
                        <td>
                            <a href="/admin/manage/subOrg/edit/{{subOrg._id}}" role="button"  title="编辑" class="btn btn-primary btn-xs"><i class="fa fa-edit"></i></a>
                            <a href="###" role="button"  title="推荐" ng-click="topsubOrg(subOrg._id,1)" class="btn btn-warning btn-xs" ng-show="subOrg.isTop == 0"><i class="fa fa-thumbs-o-up"></i></a>
                            <a href="###" role="button"  title="取消推荐" ng-click="topsubOrg(subOrg._id,0)" class="btn btn-default btn-xs" ng-show="subOrg.isTop == 1"><i class="fa fa-thumbs-o-down"></i></a>
                            <button class="btn btn-default btn-xs" type="button" title="删除" ng-click="delOneItem(subOrg._id)"><i class="fa fa-trash-o"></i></button>
                        </td>
                    </tr>
                </table>
            </div><!-- /.box-body -->
            <% include public/tableFooter %>
        </div><!-- /.box -->
    </div>


</div>
